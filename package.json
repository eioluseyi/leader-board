{
    "name": "reactjs-ts-vite-tailwindcss-boilerplate",
    "description": "This is a React + Typescript + Vite boilerplate to be used with Tailwindcss.",
    "version": "0.0.0",
    "private": false,
    "author": "Yony Calsin",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "test": "jest",
        "lint": "eslint src --max-warnings=0",
        "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,ts,tsx,scss,css,md}\"",
        "format": "yarn prettier -- --write",
        "check:format": "yarn prettier -- --list-different"
    },
    "dependencies": {
        "open-props": "^1.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "tailwind-merge": "^2.2.2"
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/preset-env": "^7.16.8",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.7",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "@vitejs/plugin-react-refresh": "^1.3.6",
        "@yonycalsin/prettier-config-react-typescript": "^1.0.1",
        "autoprefixer": "^10.4.2",
        "babel-jest": "^27.4.6",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-tailwindcss": "^3.3.0",
        "jest": "^27.4.7",
        "postcss": "^8.4.5",
        "prettier": "2.5.1",
        "react-test-renderer": "^17.0.2",
        "tailwindcss": "^3.0.15",
        "typescript": "^5.4.5",
        "vite": "^2.7.13"
    }
}